// Environment variables
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=your_password
DB_NAME=abandoned_explorer
DB_PORT=3306

// JWT Secret - Generate a strong secret key
JWT_SECRET=your_very_strong_jwt_secret_key_here_min_32_chars

// Server Configuration
PORT=3000
NODE_ENV=development

// AWS S3 Configuration (for image uploads)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
S3_BUCKET_NAME=abandoned-explorer-images

// Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

// Image upload settings
MAX_FILE_SIZE=5242880
ALLOWED_IMAGE_TYPES=jpeg,jpg,png,webp

// Email configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

// Admin settings
ADMIN_EMAIL=admin@abandonedexplorer.com
DEFAULT_ADMIN_PASSWORD=change_this_password

// Apple/Google API keys (for subscription validation)
APPLE_SHARED_SECRET=your_apple_shared_secret
GOOGLE_PLAY_SERVICE_ACCOUNT_KEY=path/to/google-service-account.json
